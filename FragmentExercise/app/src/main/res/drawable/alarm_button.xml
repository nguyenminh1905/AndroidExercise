<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background for selected item -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/red" /> <!-- Replace with your desired background color -->

            <corners android:radius="30dp" /> <!-- Replace with your desired corner radius -->
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/black" /> <!-- Replace with your desired background color -->

            <corners android:radius="30dp" /> <!-- Replace with your desired corner radius -->
        </shape>
    </item>
</selector>